
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_LayoutNovo</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/cerulean/bootstrap.min.css" media="all"/>
</head>
<body>

    @if (IsSectionDefined("Menu"))
    {
        <div class="col-md-4">
            <h1>Menu</h1>
            @RenderSection("menu",false)
        </div>
    }

    <div class="container well col-md-8">
        @RenderBody()
    </div>

    @RenderSection("Scripts",false)
</body>
</html>

